<%- include header %>
<section class="content-wrap">
  <div class="container">
    <div class="row">
     <% posts.forEach(function (post, index) { %>
      <main class="col-md-8 col-md-offset-2 main-content"> 
      <article class="post"> 

<div class="post-head"> 
 <h2 class="post-title"><%= post.title %></h2>
<div class="post-meta">
<span class="author"> 作者：<a href="/u/<%= post.name %>"><%= post.name %></a> </span> •
<span class="post-date"> 日期：<%= post.time.minute %></span>•
<span class="kinds">类别：<a href="#"><%= post.kinds %></a></span>
</div>
</div>
<div class="post-content"><%- post.post %></div>
</article>

</main>
<% }) %>
</div>
</div>
</section>
<%- include footer %>