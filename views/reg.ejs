<body class="home-template">

<div class="container">
 <div class="widget-bg col-md-6 col-md-offset-3">
<% if (success) { %>
  <div><%= success %></div>
<% } %>
<% if (error) { %>
  <div><%= error %> </div>
<% } %>
<form method="post" class="form-register">
<h2 class="form-signin-heading">注册</h2>
<div class="form-group">
<label >用户名</label>
<input  name="name" class="form-control"/>
</div>
<div class="form-group">
<label >密码： </label> 
<input  name="password" class="form-control"/>
</div>
<div class="form-group">
<label >确认密码：</label>
<input type="password" name="password-repeat" class="form-control"/>
</div>
<div class="form-group">
<label >邮箱：</label>    
<input  name="email" class="form-control"/>
</div>
<a href="http://localhost:4000/login" class="res">去登陆?</a></br>
<input type="submit" value="注册" class="btn btn-lg btn-warning btn-block"/>
</form>
 </div> 
</div> 
