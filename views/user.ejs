<%- include header %>
<% posts.forEach(function (post, index) { %>
  <p><h2><% if (post.reprint_info.reprint_from) { %>
  <br><a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a>
<% } %>
  <a href="/p/<%= post._id %>"><%= post.title %></a>
         <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a></h2></p>
  
  <p class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
    日期：<%= post.time.minute %>
  </p>
  <p><%- post.post %></p>
<% }) %>
<%- include footer %>